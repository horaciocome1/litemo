<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">

        <TextView
                android:text="Who I follow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
                app:layout_constraintTop_toTopOf="@+id/switch1" app:layout_constraintBottom_toBottomOf="@+id/switch1"
                app:layout_constraintEnd_toStartOf="@+id/switch1" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>
        <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch1" android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>
        <TextView
                android:text="Show only posts from those i do follow."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/switch1"
                app:layout_constraintEnd_toEndOf="@+id/switch1"
                app:layout_constraintHorizontal_bias="0.0"/>
        <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/divider"
                app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"/>
        <TextView
                android:text="Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/divider" app:layout_constraintStart_toStartOf="@+id/textView"
        />
        <TextView
                android:text="About which category would you like to read. None selected yet."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="@+id/switch1"/>
        <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/divider"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
                android:text="Tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:layout_constraintStart_toStartOf="@+id/textView"
        />
        <TextView
                android:text="Filter by key points inside selected category, like beach for places, or lyrics for love."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="@+id/switch1" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>
        <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/divider"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
        />
        <TextView
                android:text="Bookmarked only"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/switch2" app:layout_constraintBottom_toBottomOf="@+id/switch2"
                app:layout_constraintEnd_toStartOf="@+id/switch2" android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp" app:layout_constraintHorizontal_bias="0.01"/>
        <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch2"
                app:layout_constraintTop_toBottomOf="@+id/divider3" android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="@+id/switch1"
        />
        <TextView
                android:text="Show only posts you did  bookmarked before."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/switch2" app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="@+id/switch1"
                app:layout_constraintHorizontal_bias="0.0"/>
        <View
                android:id="@+id/divider5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/divider"
                app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"/>
        <TextView
                android:text="Order by"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/divider5" app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="@+id/switch1"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintStart_toStartOf="@+id/textView"
                android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>